{
  "name": "payload-plugin-mcp",
  "version": "1.3.0",
  "description": "A PayloadCMS plugin that integrates with MCP (Model Context Protocol) to enable AI model communication and context sharing within PayloadCMS applications",
  "license": "MIT",
  "type": "module",
  "author": "Antler Digital",
  "repository": {
    "type": "git",
    "url": "https://github.com/Antler-Digital/payload-plugin-mcp"
  },
  "bugs": {
    "url": "https://github.com/Antler-Digital/payload-plugin-mcp/issues"
  },
  "homepage": "https://payload-plugin-mcp.antler.digital",
  "keywords": [
    "payload",
    "payloadcms",
    "payload-plugin",
    "mcp",
    "model-context-protocol",
    "ai",
    "cms",
    "plugin",
    "claude",
    "anthropic",
    "headless-cms"
  ],
  "contributors": [
    {
      "name": "Sam Loyd",
      "email": "sam@antler.digital",
      "url": "https://github.com/loyd0"
    },
    {
      "name": "Jack McGregor",
      "email": "jack@antler.digital",
      "url": "https://github.com/j-mcgregor"
    }
  ],
  "exports": {
    ".": {
      "import": "./dist/exports/index.js",
      "types": "./dist/exports/index.d.ts",
      "default": "./dist/exports/index.js"
    }
  },
  "main": "./dist/exports/index.js",
  "types": "./dist/exports/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:app": "next build dev",
    "build": "pnpm copyfiles && pnpm build:types && pnpm build:swc",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths --ignore \"**/*.test.ts,**/*.test.tsx,**/*.spec.ts,**/*.spec.tsx,**/__tests__/**,**/tests/**,src/test/**\"",
    "build:types": "tsc --outDir dist --rootDir ./src",
    "clean": "rimraf {dist,*.tsbuildinfo}",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png,json}\" dist/",
    "cz": "echo \"Use conventional commits for version management\"",
    "dev": "next dev dev --turbo",
    "dev:generate-importmap": "pnpm dev:payload generate:importmap",
    "dev:generate-types": "pnpm dev:payload generate:types",
    "dev:payload": "cross-env PAYLOAD_CONFIG_PATH=./dev/payload.config.ts payload",
    "generate:importmap": "pnpm dev:generate-importmap",
    "generate:types": "pnpm dev:generate-types",
    "lint": "eslint",
    "lint:fix": "eslint ./src --fix",
    "prepublishOnly": "pnpm clean && pnpm build",
    "release": "pnpm build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "prepack": "pnpm build",
    "size-check": "size-limit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepare": "husky"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^15.5.5",
    "mcp-handler": "^1.0.2",
    "prism-react-renderer": "^2.4.1",
    "react-code-block": "^1.1.3",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@payloadcms/db-mongodb": "latest",
    "@payloadcms/db-postgres": "latest",
    "@payloadcms/db-sqlite": "latest",
    "@payloadcms/eslint-config": "latest",
    "@payloadcms/next": "latest",
    "@payloadcms/richtext-lexical": "latest",
    "@payloadcms/ui": "latest",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@swc-node/register": "1.10.9",
    "@swc/cli": "0.6.0",
    "@types/node": "^22.18.1",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.2",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "copyfiles": "2.4.1",
    "cross-env": "^7.0.3",
    "esbuild": "0.25.9",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.3.0",
    "git-cz": "^4.9.0",
    "graphql": "^16.11.0",
    "husky": "^9.1.7",
    "mongodb-memory-server": "10.1.4",
    "next": "15.5.0",
    "open": "^10.2.0",
    "payload": "latest",
    "prettier": "^3.6.2",
    "qs-esm": "7.0.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "rimraf": "3.0.2",
    "semantic-release": "^24.2.8",
    "sharp": "0.34.2",
    "size-limit": "^11.2.0",
    "sort-package-json": "^2.15.1",
    "ts-json-schema-generator": "^2.4.0",
    "tsx": "^4.20.5",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "payload": ">=3.0.0"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0 || >=22.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ],
    "overrides": {
      "esbuild": ">=0.25.0",
      "next": ">=15.5.0"
    }
  },
  "registry": "https://registry.npmjs.org/",
  "packageManager": "pnpm@9.15.9",
  "size-limit": [
    {
      "name": "Main bundle (ESM)",
      "path": "dist/exports/index.js",
      "limit": "50 KB",
      "gzip": true
    },
    {
      "name": "Types",
      "path": "dist/exports/index.d.ts",
      "limit": "10 KB"
    }
  ]
}
