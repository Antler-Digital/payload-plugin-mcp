{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "composite": false,
    "incremental": false,
    "module": "ESNext",
    "moduleResolution": "bundler"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["**/*.test.*", "**/*.spec.*", "./dev/**/*", "./docs/**/*", "./examples/**/*"]
}
